<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activeBookingsText"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="You need to choose a venue firts to create a booking"
        android:textColor="#60508C"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="400dp"/>

    <Button
        android:id="@+id/selectVenueButton"
        android:layout_width="146dp"
        android:layout_height="81dp"
        android:backgroundTint="@color/contrast900"
        android:text="Select Venue" />

</LinearLayout>
